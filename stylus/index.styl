@import "variables.styl"

body
	font-family: 'Roboto', sans-serif
	margin: 0
	#content
		display: flex
		
	input[type=text]
		width: calc(100% - 20px)
		height: 23px
		font-size: 16px
		line-height: 23px
		padding: 5px 10px
		border-radius: $border-radius
		border: solid 1px rgba(0,0,0,0.1)
		
	.button
		cursor: pointer
		padding: 8px
		margin: 2px
		border-radius: $border-radius
		&.selected
			background: $orange
			color: white
		&:hover
			background: #e84921e0
			color: white		
		&:active
			background: $orange
			color: white

// chrome range input

input[type=range]{
    -webkit-appearance: none;
    background:transparent
    width: 100%
    padding: 0
    margin: 0
}

input[type=range]::-webkit-slider-runnable-track {
    width: 300px;
    height: 5px;
    background: #ccc;
    border: none;
    border-radius: 3px;
}

input[type=range]::-webkit-slider-thumb {
    -webkit-appearance: none;
    border: none;
    height: 16px;
    width: 16px;
    border-radius: 50%;
    background: $orange;
    margin-top: -4px;
}

input[type=range]:focus {
    outline: none;
}

input[type=range]:focus::-webkit-slider-runnable-track {
    background: #bbb;
}

// firefox range input

input[type=range]::-moz-range-track {
    width: 100%;
    height: 5px;
    background: #ccc;
    border: none;
    border-radius: 3px;
}

input[type=range]::-moz-range-thumb {
    border: none;
    height: 16px;
    width: 16px;
    border-radius: 50%;
    background: $orange;
}



input[type=range]:focus::-moz-range-track {
    background: #bbb;
}